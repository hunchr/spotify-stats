<thead>
  <tr>
    <th><%= t "labels.number" %></th>
    <% controller.class
        .const_get("#{params[:action].upcase}_HEADERS").each do |header| %>
      <% dir = ApplicationController::DEFAULT_DIR[header] %>
      <th><%= link_to t("labels.#{header}"), sort_path(header, dir) %></th>
    <% end %>
  </tr>
</thead>
